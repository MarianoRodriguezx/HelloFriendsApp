<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_trans"
            android:layout_width="270dp"
            android:layout_height="261dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/circle_button_walkie"
            android:text="TRANSMITIR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_trans">

            <Button
                android:id="@+id/btn_volmen_menos"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/circle_button_walkie"
                android:text="VOL -"
                android:textSize="8.5dp"></Button>

            <Button
                android:id="@+id/btn_volmen_mas"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/circle_button_walkie"
                android:text="VOL +"
                android:textSize="8.5dp"></Button>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/circle_button_walkie"
                android:text="CH -"
                android:textSize="8.5dp"></Button>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/circle_button_walkie"
                android:text="CH +"
                android:textSize="8.5dp"></Button>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/bocina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h, .68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>